    <% layout('layouts/boilerplate') %>
    <h1>All Pubs</h1>
    <div>
        <a href="/pubs/new">Add Pub</a>
    </div>
    <ul>
        <% for (let pub of pubs) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="<%= pub.image %>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= pub.title %></h5>
                            <p class="card-text"><%= pub.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= pub.location %></small>
                            </p>
                            <a href="/pubs/<%= pub._id %>" class="btn btn-primary">View <%= pub.title %></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>