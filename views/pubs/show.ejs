<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6">
        <div class="card mb-4">
            <img src="<%= pub.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= pub.title %></h5>
              <p class="card-text text-muted">Location: <%= pub.location %></p>
              <p class="card-text"><%= pub.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Average Price Per Drink: $<%= pub.price %></li>
              <li class="list-group-item">Submitted by: <%= pub.author.username %></li>
            </ul>
            <% if(currentUser && pub.author.equals(currentUser._id)) { %>
            <div class="card-body">
                <a href="/pubs/<%= pub._id %>/edit" class="card-link btn btn-info">Edit Pub</a>
                <form class="d-inline" action="/pubs/<%= pub._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete Pub</button>
                    </form>
            </div>
            <% } %>
            <div class="card-footer">
                <a class="text-muted" href="/pubs">View All Pubs</a>
            </div>
          </div>
    </div>
    <div class="col-6">
      <% if(currentUser) {%>
      <h2>Leave a Review</h2>
      <form class="mb-3 validated-form" action="/pubs/<%=pub._id%>/reviews" method="POST" novalidate>
        <div class="mb-3">
          <label class="form-label" for="rating">Rating</label>
          <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
        </div>
        <div class="mb-3">
          <label for="body">Review</label>
            <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
            <div class="valid-feedback">Looks good!</div>
        </div>
        <button class="btn btn-success">Submit</button>
      </form>
      <% } %>
      <% for (let review of pub.reviews) { %>
        <div class="card mb-3">
         <div class="card-body">
        <h5 class="card-title">Rating: <%= review.rating %> </h5>
        <p class="card-subtitle mb-2 text-muted" >By <%= review.author.username %> </p>
        <p class="card-text"><%= review.body %> </p>
        <% if(currentUser && review.author.equals(currentUser._id)) { %>
        <form action="/pubs/<%= pub._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
          <button class="btn-danger">Delete</button>
          <% } %>
        </form>
      </div>
    </div>
      <% } %>
  </div>
  </div>