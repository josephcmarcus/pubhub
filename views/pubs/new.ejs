<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-6 offset-3">
        <h1 class="text-center">New Pub</h1>
        <form action="/pubs" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="pub[title]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="pub[location]" required>
            </div>
            <div class="mb-3">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="customFile">
                    <label name = "image" class="custom-file-label" for="customFile" multiple>Choose images...</label>
                </div>
            </div>
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="pub[image]" required>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="price">Average Drink Price</label>
                <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input id="price" type="text" class="form-control" name="pub[price]" placeholder="$0.00" aria-label="Average Drink Price" aria-describedby="price-label" required>
              </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="pub[description]" required></textarea>
            </div>
            <div class="mb-3">
            <button class="btn btn-success">Add Pub</button>
             </div>
        </form>
        <a href="/pubs">All Pubs</a>
    
    </div>
</div>